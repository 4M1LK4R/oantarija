
@{
    ViewBag.Title = "Horario";
}
<div class="container">

    <div class="row">
        <center>
            <h3 class="white-text">HORARIOS</h3>
            <p class="white-text flow-text">Administracion de horarios.</p>
        </center>
        <hr>
        <br>
        <div class="col s12 m12 l12">
            <center>
                <p class="white-text flow-text">Horarios registrados</p>
            </center>
            <a id="btnListar" onclick="CrearDataTable();" class="btn teal waves-effect"><i class="icon-list-numbered"></i>Mostrar Horarios</a>
        </div>
    </div>
    <div class="row white">
        <div class="col s12 m12 l12">
            <div id="tabla" class="amk">
            </div>
        </div>
    </div>
    <div class="fixed-action-btn">
        <a class="btn-floating btn-large teal" onclick="Nuevo();">
            <i class="large icon-plus-1"></i>
        </a>
    </div>

</div>
<!-- Modal Structure Reserva-->
<div id="modalDatos" class="modal modal-fixed-footer">
    <div class="modal-content">
        <center>
            <div id="cabeceraModal">
            </div>
            <div class="row">
                <input id="id" type="text" hidden value="0">
                <div class="input-field col s12 m12 l12">
                    <i class="icon-right-dir prefix"></i>
                    <input id="nombre" type="text">
                    <label for="nombre">Nombre</label>
                </div>
                <div class="input-field col s12">
                    <select id="hInicio">
                        <option value="" disabled selected>(Seleccionar Hora)</option>
                        <optgroup label="Mañana">
                            <option value="07:00">07:00</option>
                            <option value="07:30">07:30</option>
                            <option value="08:00">08:00</option>
                            <option value="08:30">08:30</option>
                            <option value="09:00">09:00</option>
                            <option value="09:30">09:30</option>
                            <option value="10:00">10:00</option>
                            <option value="10:30">10:30</option>
                            <option value="11:00">11:00</option>
                            <option value="11:30">11:30</option>
                        </optgroup>
                        <optgroup label="Mediodía">
                            <option value="12:00">12:00</option>
                            <option value="12:30">12:30</option>
                        </optgroup>
                        <optgroup label="Tarde">
                            <option value="13:00">13:00</option>
                            <option value="13:30">13:30</option>
                            <option value="14:00">14:00</option>
                            <option value="14:30">14:30</option>
                            <option value="15:00">15:00</option>
                            <option value="15:30">15:30</option>
                            <option value="16:00">16:00</option>
                            <option value="16:30">16:30</option>
                            <option value="17:00">17:00</option>
                            <option value="17:30">17:30</option>
                        </optgroup>
                        <optgroup label="Noche">
                            <option value="18:00">18:00</option>
                            <option value="18:30">18:30</option>
                            <option value="19:00">19:00</option>
                            <option value="19:30">19:30</option>
                            <option value="20:00">20:00</option>
                            <option value="20:30">20:30</option>
                            <option value="21:00">21:00</option>
                            <option value="21:30">21:30</option>
                            <option value="22:00">22:00</option>
                            <option value="22:30">22:30</option>
                        </optgroup>
                    </select>
                    <label>Hora Inicio</label>
                </div>
                <div class="input-field col s12">
                    <select id="hFin">
                        <option value="" disabled selected>(Seleccionar Hora)</option>
                        <optgroup label="Mañana">
                            <option value="07:00">07:00</option>
                            <option value="07:30">07:30</option>
                            <option value="08:00">08:00</option>
                            <option value="08:30">08:30</option>
                            <option value="09:00">09:00</option>
                            <option value="09:30">09:30</option>
                            <option value="10:00">10:00</option>
                            <option value="10:30">10:30</option>
                            <option value="11:00">11:00</option>
                            <option value="11:30">11:30</option>
                        </optgroup>
                        <optgroup label="Mediodía">
                            <option value="12:00">12:00</option>
                            <option value="12:30">12:30</option>
                        </optgroup>
                        <optgroup label="Tarde">
                            <option value="13:00">13:00</option>
                            <option value="13:30">13:30</option>
                            <option value="14:00">14:00</option>
                            <option value="14:30">14:30</option>
                            <option value="15:00">15:00</option>
                            <option value="15:30">15:30</option>
                            <option value="16:00">16:00</option>
                            <option value="16:30">16:30</option>
                            <option value="17:00">17:00</option>
                            <option value="17:30">17:30</option>
                        </optgroup>
                        <optgroup label="Tarde">
                            <option value="18:00">18:00</option>
                            <option value="18:30">18:30</option>
                            <option value="19:00">19:00</option>
                            <option value="19:30">19:30</option>
                            <option value="20:00">20:00</option>
                            <option value="20:30">20:30</option>
                            <option value="21:00">21:00</option>
                            <option value="21:30">21:30</option>
                            <option value="22:00">22:00</option>
                            <option value="22:30">22:30</option>
                        </optgroup>
                    </select>
                    <label>Hora Fin</label>
                </div>
            </div>
            <p class="grey-text">Estado:</p>
            <div class="row">
                <div class="col s6 m6 l6">
                    <input name="group1" type="radio" id="activo" />
                    <label for="activo">Activo</label>
                </div>
                <div class="col s6 m6 l6">
                    <input name="group1" type="radio" id="inactivo" />
                    <label for="inactivo">Inactivo</label>
                </div>
            </div>

        </center>
    </div>
    <div class="modal-footer blue-grey darken-4">
        <a id="aceptar" class="waves-effect waves-green btn-flat green white-text">Aceptar</a>
        <a id="cancelar" class="modal-action modal-close waves-effect waves-red btn-flat red white-text">Cancelar</a>
    </div>
</div>




<div id="modalEliminar" class="modal">
    <div class="modal-content">
        <center>
            <div id="cabeceraModalEliminar">
            </div>
            <input type="text" id="idEliminar" hidden/>
            <input type="text" id="nomEliminar" hidden/>
        </center>
    </div>
    <div class="modal-footer blue-grey darken-4">
        <a id="aceptarEliminar" class="waves-effect waves-green btn-flat green white-text">Aceptar</a>
        <a id="cancelarEliminar" class="modal-action modal-close waves-effect waves-red btn-flat red white-text">Cancelar</a>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/horario")
}
